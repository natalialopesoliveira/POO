import java.util.Scanner;

public class Uso {

	private static Scanner scanner;

	public static void main(String[] args) {
		Horario horario[] = new Horario[50];
		int i = 0;
		while (i < 50) {
			scanner = new Scanner(System.in);
			try {
				System.out.println("\nEscolha o tipo de cadastro que deseja criar:\n" + "1- Criar tarefa;\n"
						+ "2- Criar tarefa especificando duração;\n3- Sair.");
				int _opcao = scanner.nextInt();
				scanner.nextLine();
				if (_opcao > 0 && _opcao < 3) {
					System.out.print("\nDigite apenas a hora (sem minutos): ");
					String _nome = scanner.nextInt();
					scanner.nextLine();
					System.out.print("\nDigite apenas os minutos: ");
					String _identidade = scanner.nextInt();
					scanner.nextLine();
					System.out.print("\nDigite a descriço da tarefa: ");
					String _dataDeNascimento = scanner.nextLine();
					
					
					i++;
				}else if(_opcao == 3) {
					i = 50;
				}else {
					System.out.println("");
				}
				
				
				
			}catch(Exception e) {
				
			}
		}
	}

}
