
public class TarefaHorarioDuracao extends TarefaHorario{
	private int duracao;
	
	public TarefaHorarioDuracao() {
		super();
		this.setDuracao(0);
	}
	
	public TarefaHorarioDuracao(int _horas, int _minutos, String _descricao, int _duracao) {
		super(_horas, _minutos, _descricao);
		this.setDuracao(_duracao);
	}
	
	public void setDuracao(int _duracao) {
		this.duracao = _duracao;
	}
	
	public int getDuracao() {
		return this.duracao;
	}
	
	public String toString() {
		StringBuilder dados = new StringBuilder();
		dados.append(super.toString());
		dados.append(" (");
		dados.append(this.getDuracao());
		dados.append(" min)");
		return dados.toString();
	}
}
