
public class TarefaHorario extends Horario{
	private String descricao;

	public TarefaHorario() {
		this(0,0,"tarefa n√£o cadastrada");
	}
	
	public TarefaHorario(int _horas, String _descricao) {
		this(_horas,0,_descricao);
	}
	
	public TarefaHorario(int _horas, int _minutos, String _descricao) throws new Exception{
		this.setHoras(_horas);
		this.setMinutos(_minutos);
		this.setDescricao(_descricao);
		
	}
	
	public void setDescricao(String _descricao) {
		this.descricao = _descricao;
	}
	
	public String getDescricao() {
		return this.descricao;
	}
	
	public String toString() {
		StringBuilder dados = new StringBuilder();
		dados.append(super.toString());
		dados.append(" - ");
		dados.append(this.getDescricao());
		return dados.toString();
	}
}
